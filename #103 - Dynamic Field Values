public List<String> getFieldsValue(Account acc, List<String> fields)
{
    // code here
   
    
    List<String> result = New List<String>();

    for(String f : fields){
        
        String singleresult = String.valueOf(acc.get(f));
        result.add(singleresult);
    }
    return result;
    
}

